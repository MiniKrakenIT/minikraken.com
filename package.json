{
	"name": "minikraken.com",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "bun --bun vite dev --host",
		"build": "bun --bun vite build",
		"postbuild": "bun run -bun tooling/build/post-build.ts",
		"preview": "bun --bun vite preview",
		"prepare": "bun --bun svelte-kit sync",
		"check": "bun --bun svelte-kit sync && bun --bun svelte-check --tsconfig ./tsconfig.json && bunx --bun biome check --write .",
		"check:watch": "bun --bun svelte-kit sync && bun --bun svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "bunx --bun biome format --write .",
		"lint": "bunx --bun biome check --write .",
		"release": "bunx release-it",
		"release:ci": "bunx release-it --ci",
		"email:dev": "email dev --dir src/lib/mailing/templates",
		"email:build": "email dev --packageManager bun --dir src/lib/mailing/templates",
		"email:export": "email export --dir src/lib/mailing/templates "
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.0-beta.1",
		"@jonasbuerger/svelte-adapter-bun": "^2.3.0",
		"@release-it/conventional-changelog": "^10.0.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/enhanced-img": "^0.4.4",
		"@sveltejs/kit": "^2.20.4",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/bun": "^1.2.8",
		"@unocss/extractor-svelte": "^65.5.0",
		"@unocss/svelte-scoped": "^65.5.0",
		"daisyui": "^5.0.13",
		"globals": "^15.15.0",
		"iconoir": "^7.10.1",
		"motion": "^12.6.3",
		"nanoid": "^5.1.5",
		"posthog-js": "^1.234.9",
		"release-it": "^18.1.2",
		"resend": "^4.2.0",
		"sharp": "^0.33.5",
		"super-sitemap": "^1.0.3",
		"svelte": "^5.25.7",
		"svelte-check": "^4.1.5",
		"svelte-language-server": "^0.17.11",
		"svgo": "^3.3.2",
		"tatami-ng": "^0.8.16",
		"typescript": "^5.8.3",
		"typescript-svelte-plugin": "^0.3.46",
		"unocss": "^65.5.0",
		"vite": "^6.2.5",
		"vite-plugin-image-optimizer": "^1.1.8"
	},
	"dependencies": {},
	"browserslist": [
		"defaults and fully supports es6-module"
	],
	"trustedDependencies": [
		"@sveltejs/kit",
		"esbuild",
		"lefthook",
		"svelte-preprocess"
	]
}
