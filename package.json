{
  "name": "minikraken",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "PROD=false DEV=true bun --bun vite dev --host",
    "build": "vite build",
    "postbuild": "node ./src/tooling/build/post-build.js",
    "preview": "ADDRESS_HEADER= ORIGIN=http://localhost bun run -bun ./build/index.js",
    "test": "bun run test:integration && bun run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "release:dry": "release-it --ci --dry-run"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@playwright/test": "^1.45.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@sveltejs/enhanced-img": "^0.2.1",
    "@sveltejs/kit": "^2.5.17",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@tailwindcss/typography": "^0.5.13",
    "@types/bun": "^1.1.6",
    "@types/dom-view-transitions": "^1.0.4",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.9",
    "@unocss/extractor-svelte": "^0.59.4",
    "@unocss/preset-typography": "^0.59.4",
    "browserslist": "^4.23.1",
    "daisyui": "^4.12.10",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-svelte": "^2.41.0",
    "globals": "^15.6.0",
    "k6": "^0.0.0",
    "lefthook": "^1.6.18",
    "lightningcss": "^1.25.1",
    "pino-pretty": "^11.2.1",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.5",
    "release-it": "^17.4.1",
    "sass": "^1.77.6",
    "svelte": "^5.0.0-next.166",
    "svelte-adapter-bun": "^0.5.2",
    "svelte-check": "^3.8.4",
    "svelte-turnstile": "^0.5.0",
    "tslib": "^2.6.3",
    "typescript": "^5.5.2",
    "typescript-eslint": "8.0.0-alpha.20",
    "unocss": "^0.59.4",
    "unocss-preset-fluid": "^1.0.2",
    "vite": "^5.3.1",
    "vite-plugin-inspect": "^0.8.4",
    "vite-plugin-mkcert": "^1.17.5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@axiomhq/pino": "^1.0.0",
    "cookie": "^0.6.0",
    "devalue": "^5.0.0",
    "pino": "^9.2.0",
    "set-cookie-parser": "^2.6.0",
    "sharp": "^0.33.4",
    "web-vitals": "^3.5.2",
    "web-vitals-reporter": "^1.0.0"
  },
  "browserslist": [
    "defaults and fully supports es6-module"
  ],
  "trustedDependencies": [
    "@sveltejs/kit",
    "esbuild",
    "lefthook",
    "sharp",
    "svelte-preprocess"
  ],
  "release-it": {
    "git": {
      "commitMessage": "Chore: Creating release v${version}",
      "tagAnnotation": "v${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "web": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "eslint"
        },
        "infile": "CHANGELOG.md"
      }
    }
  }
}
