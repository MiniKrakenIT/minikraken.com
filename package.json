{
	"name": "minikraken.com",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "bunx --bun vite dev --host",
		"build": "bunx --bun vite build",
		"postbuild": "bun run -bun tooling/build/post-build.ts",
		"preview": "bunx --bun vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check:biome": "bunx biome check --write .",
		"format": "bunx biome format --write .",
		"lint": "bunx biome lint --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@release-it/conventional-changelog": "^10.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/enhanced-img": "^0.4.4",
		"@sveltejs/kit": "^2.20.4",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/bun": "^1.2.8",
		"@unocss/extractor-svelte": "^65.5.0",
		"@unocss/svelte-scoped": "^65.5.0",
		"daisyui": "^5.0.12",
		"globals": "^15.15.0",
		"iconoir": "^7.10.1",
		"motion": "^12.6.3",
		"nanoid": "^5.1.5",
		"posthog-js": "^1.234.9",
		"release-it": "^18.1.2",
		"sharp": "^0.33.5",
		"super-sitemap": "^1.0.3",
		"svelte": "^5.25.6",
		"svelte-check": "^4.1.5",
		"svelte-language-server": "^0.17.11",
		"svgo": "^3.3.2",
		"tatami-ng": "^0.8.16",
		"typescript": "^5.8.3",
		"typescript-svelte-plugin": "^0.3.46",
		"unocss": "^65.5.0",
		"vite": "^6.2.5",
		"vite-plugin-image-optimizer": "^1.1.8"
	},
	"dependencies": {},
	"browserslist": ["defaults and fully supports es6-module"],
	"trustedDependencies": ["@sveltejs/kit", "esbuild", "lefthook", "svelte-preprocess"],
	"release-it": {
		"git": {
			"commitMessage": "Chore: Creating release v${version}",
			"tagAnnotation": "v${version}",
			"tagName": "v${version}"
		},
		"npm": {
			"publish": false
		},
		"github": {
			"release": true
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": {
					"name": "angular"
				},
				"infile": "CHANGELOG.md"
			}
		}
	}
}
