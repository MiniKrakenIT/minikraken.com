{
	"name": "minikraken.com",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "bunx --bun vite dev",
		"build": "bunx --bun vite build",
		"postbuild": "bun run -bun tooling/build/post-build.ts",
		"preview": "bunx --bun vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "bunx biome format --write .",
		"lint": "bunx biome lint --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@sveltejs/adapter-cloudflare": "^5.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/enhanced-img": "^0.4.0",
		"@sveltejs/kit": "^2.15.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/bun": "^1.1.16",
		"@unocss/svelte-scoped": "^0.65.0",
		"globals": "^15.14.0",
		"release-it": "^18.1.0",
		"@release-it/conventional-changelog": "^10.0.0",
		"svelte": "^5.17.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"unocss": "^0.65.4",
		"vite": "^6.0.0"
	},
	"dependencies": {},
	"browserslist": ["defaults and fully supports es6-module"],
	"trustedDependencies": ["@sveltejs/kit", "esbuild", "lefthook", "svelte-preprocess"],
	"release-it": {
		"git": {
			"commitMessage": "Chore: Creating release v${version}",
			"tagAnnotation": "v${version}",
			"tagName": "v${version}"
		},
		"npm": {
			"publish": false
		},
		"github": {
			"release": true
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": {
					"name": "eslint"
				},
				"infile": "CHANGELOG.md"
			}
		}
	}
}
